/* Confirm Dialog */

@import "Matte.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"Iosevka Nerd Font 12";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					1px;
    border-radius:          25px;
    border-color:           @accent;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@foreground;
}
